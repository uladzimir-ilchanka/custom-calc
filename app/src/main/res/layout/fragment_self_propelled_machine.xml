<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scroll"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/first_step_linear"
            style="@style/linear_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rowned_corners"
            android:orientation="vertical">

            <TextView
                android:id="@+id/first_step_textview"
                style="@style/header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <RadioGroup
                android:id="@+id/first_step_radio_group"
                style="@style/radiogroup_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/second_step_linear"
            style="@style/linear_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rowned_corners"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:id="@+id/second_step_textview"
                style="@style/header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <RadioGroup
                android:id="@+id/second_step_radio_group"
                style="@style/radiogroup_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/third_step_linear"
            style="@style/linear_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rowned_corners"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:id="@+id/third_step_textview"
                style="@style/header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <RadioGroup
                android:id="@+id/third_step_radio_group"
                style="@style/radiogroup_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <TextView
            android:id="@+id/result_text_view"
            style="@style/header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@color/accent_color"
            android:visibility="gone" />

    </LinearLayout>

</ScrollView>

